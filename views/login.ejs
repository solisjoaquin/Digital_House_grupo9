<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <%- include('partials/header.ejs') %>

    
    <!-- <h1><%= title %></h1>
    <h1>Este es el login<%= title %></h1> -->

        <!-- Login-->
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">
                <form class="login100-form validate-form flex-sb flex-w">
                    <span class="login100-form-title palabraLogin">
                        Login
                    </span>

                    <!--Input para el correo-->
                    <!-- <div class="wrap-input100 validate-input div-del-input" data-validate="Username is required">
                        <input class="input100" type="text" required name="username" placeholder="Correo electronico">
                        <span class="focus-input100"></span>
                    </div> -->

                    <div class="wrap-input100 validate-input div-del-input" data-validate="Password is required">
                        <input class="input100"  required name="email" placeholder="Correo electronico">
                        <span class="focus-input100"></span>
                    </div>

                    <!-- input para la contraseña-->
                    <div class="wrap-input100 validate-input div-del-input" data-validate="Password is required">
                        <input class="input100" type="password" required name="password" placeholder="Contraseña">
                        <span class="focus-input100"></span>
                    </div>

                    <!--boton de Login-->
                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <!--boton de login con google-->
                    <div class="container-login100-form-btn m-t-17 google-div">
                        <button class="login100-form-btn google-btn">
                            <span class="fab fa-google"></span> Ingresar con Google
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>





    <%- include('partials/footer.ejs') %>
  </body>
</html>