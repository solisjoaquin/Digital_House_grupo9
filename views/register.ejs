<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <%- include('partials/header.ejs') %>

    <!--Register-->
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">



                <form class="login100-form validate-form flex-sb flex-w" action="/users/register" method="POST">
                    <!--Titulo de registrarse-->
                    <span class="login100-form-title palabraLogin">
                        Registrarse
                    </span>

                    <!--Input del nombre completo-->
                    <!-- <div class="wrap-input100 validate-input div-del-input" data-validate="Username is required">
                        <input class="input100" type="text" name="username" required placeholder="Nombre Completo">
                        <span class="focus-input100"></span>
                    </div> -->

                    <div class="wrap-input100 validate-input div-del-input" data-validate="Password is required">
                        <input class="input100" required name="nombre" placeholder="Nombre completo" type="text">
                        <span class="focus-input100"></span>
                    </div>

                    <!--Input del correo-->
                    <!-- <div class="wrap-input100 validate-input div-del-input" data-validate="Username is required">
                        <input class="input100" type="text" name="username" required placeholder="Correo electronico">
                        <span class="focus-input100"></span>
                    </div> -->

                    <div class="wrap-input100 validate-input div-del-input" data-validate="Password is required">
                        <input type="email" class="input100"  required name="email" placeholder="Correo electronico">
                        <span class="focus-input100"></span>
                    </div>

                    <!--Input de la contrase単a -->
                    <div class="wrap-input100 validate-input div-del-input" data-validate="Password is required">
                        <input type="password" class="input100" type="password" name="password" required placeholder="Contrase単a">
                        <span class="focus-input100"></span>
                    </div>

                    <!--Input de la confirmacion de contrase単a-->
                    <div class="wrap-input100 validate-input div-del-input" data-validate="Password is required">
                        <input type="password" class="input100" type="password" name="password" required placeholder="Confirmar contrase単a">
                        <span class="focus-input100"></span>
                    </div>

                    <!--Boton de registrase -->
                    <div class="container-login100-form-btn m-t-17">
                        <input type="submit" value="registrarse" class="login100-form-btn">
                            Registrarse
                    </input>
                    </div>

                    <!--Boton de registrarse con Google -->
                    <div class="container-login100-form-btn m-t-17 google-div">

                        <button class="login100-form-btn google-btn">
                            <span class="fab fa-google"></span> Registrarse con Google
                        </button>
                    </div>

                </form>



            </div>
        </div>
    </div>


    <%- include('partials/footer.ejs') %>
</body>
</html>