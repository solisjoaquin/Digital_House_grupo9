<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    
    <!-- Carrito-------------------------------------------->


    <div class="limiter">

        <div class="container-login100">

            <table id="t01">
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                </tr>
                <tr>
                    <td class="teclado">Teclado</td>
                    <td>$360.00</td>
                    <td><input placeholder="0" type="text" size="3"></td>
                    <td>$720.00</td>
                </tr>
                <tr>
                    <td class="mouse">Mouse</td>
                    <td>$360.00</td>
                    <td><input placeholder="0" type="text" size="3"></td>
                    <td>$720.00</td>
                </tr>
                <tr>
                    <td class="auriculares">Auriculares</td>
                    <td>$360.00</td>
                    <td><input placeholder="0" type="text" size="3"></td>
                    <td>$720.00</td>
                </tr>
            </table>

            <div class="descuento">
                <form>


                    <p><strong>Precio de envio</strong></p> <br>
                    <label for="country">Provincia</label><br>
                    <select id="country" name="country">
                        <option value="australia">Buenos Aires</option>
                        <option value="canada">Cordoba</option>
                        <option value="usa">Santa Fe</option>
                    </select><br>


                    <label for="fname">Codigo postal</label><br>
                    <input type="text" id="fname" name="firstname" placeholder="XXXX" size="5"><br>

                    <input type="submit" value="Calcular envio">
                </form>
            </div>

            <div class="descuento">
                <form>


                    <p><strong>¿Tenes un cupón?</strong></p> <br>

                    <label for="fname">Ingresa el numero del cupón</label><br>
                    <input type="text" id="fname" name="firstname" placeholder="XXXXXXXX" size="5"><br>

                    <input type="submit" value="Aplicar cupón">
                </form>
            </div>

            <div class="botones_de_compra">
                <h1>Total: $5000.00</h1>
                <button class="botones_de_compra">Seguir comprando</button>
                <button class="botones_de_compra">Pagar</button>

            </div>
        </div>
    </div>

    <!--fin del carrito------------------------>




    <%- include('partials/footer.ejs') %>
  </body>
</html>